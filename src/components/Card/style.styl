.container
  display flex
  border-bottom 1px solid #efefef
  padding 10px 20px
  & > div
    width 100%
    .date
      padding-left 10px
      border-left 3px solid lightblue
      font-size 12px
      color #555
    .title
      font-size 24px
      font-weight bolder
    .tags
      margin-bottom 10px
      text-align right
      width 100%
      color lightskyblue
      text-transform uppercase
    .short
      color #555
    .btn
      display: inline-block;
      margin-top 10px
      padding 5px 14px
      border 1px solid lightblue
      background #fff
      color lightblue
      font-size 13px
      text-decoration: none;
      