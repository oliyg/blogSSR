.container
  padding 20px
  .welcome
    box-sizing border-box
    overflow hidden
    margin 0 auto
    padding 5px
    text-align center
    line-height 100px
    font-size 20px
    text-transform uppercase
    color #ddd
  input
    display block
    box-sizing border-box
    padding 10px 20px
    border: none;
    border-bottom: 1px solid lightsteelblue
    width 100%
  button
    display block
    margin-top 10px
    border-radius 5px
    width 100%
    height 40px
    background #fff
    color #555
  .msg
    padding 20px
    border-radius 5px
    color #fff
    font-weight bolder
    background lightsteelblue
    cursor pointer
