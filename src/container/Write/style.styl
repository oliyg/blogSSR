.container
  margin 20px
  color #555
  .msg
    width 100%
    background lightgoldenrodyellow
    padding 10px 20px
    box-sizing border-box
    color orange
  input
    display block
    border none
    border-bottom 1px solid lightblue
    padding-bottom 10px
    margin 20px 0
    outline none
    width 100%
    font-size 16px
  textarea
    border 1px solid lightblue
    box-sizing border-box
    width 100%
    height 200px
    padding 10px
    outline none
  button
    margin 10px 0
    margin-right 20px
    padding 5px 10px
    border 1px solid lightblue
    border-radius 5px
    outline none
    color lightblue
    background #fff
    font-size 16px
   button.reset
    color lightpink
    border-color lightpink
